<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane id="AnchorPane"
            prefHeight="400.0"
            prefWidth="600.0"
            style="-fx-background-color: #F4F6F8;"
            xmlns="http://javafx.com/javafx/25"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="ec.edu.espoch.poryectointegrador.controladorr.PrimarioController">

   <children>

      <Label layoutX="235.0" layoutY="30.0"
             text="Iniciar Sesión"
             style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #1E3A5F;" />

      <Label fx:id="LBMensaje"
             layoutX="220.0"
             layoutY="70.0"
             style="-fx-text-fill: #DC2626; -fx-font-size: 12px;" />

      <TextField fx:id="TXTUsuario"
                 layoutX="200.0"
                 layoutY="120.0"
                 prefWidth="200.0"
                 promptText="Usuario"
                 style="-fx-background-radius: 8;
                        -fx-border-radius: 8;
                        -fx-border-color: #CBD5E1;
                        -fx-padding: 8;" />

      <PasswordField fx:id="TXTContraseña"
                     layoutX="200.0"
                     layoutY="170.0"
                     prefWidth="200.0"
                     promptText="Contraseña"
                     style="-fx-background-radius: 8;
                            -fx-border-radius: 8;
                            -fx-border-color: #CBD5E1;
                            -fx-padding: 8;" />

      <Button fx:id="BTInicio"
              layoutX="235.0"
              layoutY="230.0"
              prefWidth="130.0"
              text="Siguiente"
              onAction="#iniciarSesion"
              style="-fx-background-color: #2563EB;
                     -fx-text-fill: white;
                     -fx-font-weight: bold;
                     -fx-background-radius: 8;" />

      <Button fx:id="BTSalir"
              layoutX="235.0"
              layoutY="275.0"
              prefWidth="130.0"
              text="Salir"
              onAction="#salir"
              style="-fx-background-color: #DC2626;
                     -fx-text-fill: white;
                     -fx-background-radius: 8;" />

   </children>
</AnchorPane>

