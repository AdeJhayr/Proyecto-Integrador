<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane id="AnchorPane"
            prefHeight="400.0"
            prefWidth="600.0"
            style="-fx-background-color: #F4F6F8;"
            xmlns="http://javafx.com/javafx/13"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="ec.edu.espoch.poryectointegrador.controladorr.SecundarioController">

   <children>

      <Label layoutX="250.0"
             layoutY="80.0"
             text="Menú Principal"
             style="-fx-font-size: 18px;
                    -fx-font-weight: bold;
                    -fx-text-fill: #1E3A5F;" />

      <Button fx:id="BTNuevo"
              layoutX="230.0"
              layoutY="140.0"
              prefWidth="140.0"
              text="Nuevo"
              onAction="#nuevo"
              style="-fx-background-color: #2563EB;
                     -fx-text-fill: white;
                     -fx-font-weight: bold;
                     -fx-background-radius: 8;" />

      <Button fx:id="BTInformacion"
              layoutX="230.0"
              layoutY="190.0"
              prefWidth="140.0"
              text="Información"
              onAction="#informacion"
              style="-fx-background-color: #1E40AF;
                     -fx-text-fill: white;
                     -fx-background-radius: 8;" />

      <Button fx:id="BTSalir"
              layoutX="230.0"
              layoutY="240.0"
              prefWidth="140.0"
              text="Salir"
              onAction="#salir"
              style="-fx-background-color: #DC2626;
                     -fx-text-fill: white;
                     -fx-background-radius: 8;" />

   </children>
</AnchorPane>
