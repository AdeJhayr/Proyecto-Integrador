<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER"
      prefHeight="420"
      prefWidth="320"
      spacing="14"
      style="-fx-background-color: #f4f6f8;"
      xmlns="http://javafx.com/javafx/25"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="ec.edu.espoch.poryectointegrador.controlador.SecondaryController">

    <padding>
        <Insets top="20" bottom="20" left="25" right="25"/>
    </padding>

    <!-- Título -->
    <Label text="Ganancias Semanales"
           style="-fx-font-size: 18; -fx-font-weight: bold;"/>

    <!-- Total -->
    <Label fx:id="TotalS"
           text="Total: $0.00"
           style="-fx-font-size: 14;"/>

    <!-- Campos -->
    <VBox alignment="CENTER_LEFT" spacing="8">

        <Label text="Lunes"/>
        <TextField fx:id="TxtLunes" promptText="\$"/>

        <Label text="Martes"/>
        <TextField fx:id="TxtMartes" promptText="\$"/>

        <Label text="Miércoles"/>
        <TextField fx:id="TxtMiercoles" promptText="\$"/>

        <Label text="Jueves"/>
        <TextField fx:id="TxtJueves" promptText="\$"/>

        <Label text="Viernes"/>
        <TextField fx:id="TxtViernes" promptText="\$"/>

        <Label text="Sábado"/>
        <TextField fx:id="TxtSabado" promptText="\$"/>

    </VBox>

    <!-- Botón principal -->
    <Button fx:id="BTGuardarSemana"
            text="Guardar Semana"
            prefWidth="220"
            prefHeight="36"/>

    <!-- Botones inferiores -->
    <HBox spacing="12" alignment="CENTER">

        <Button fx:id="secondaryButton"
                text="Regresar"
                prefWidth="100"
                prefHeight="36"
                onAction="#regresar"
                style="-fx-background-color: #90a4ae; -fx-text-fill: white;"/>

        <Button fx:id="BTLista"
                text="Ver Lista"
                prefWidth="100"
                prefHeight="36"
                onAction="#switchToSecondary"/>

    </HBox>

</VBox>
