<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="400.0"
            prefWidth="600.0"
            style="-fx-background-color: #F4F6F8;"
            xmlns="http://javafx.com/javafx/25"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="ec.edu.espoch.poryectointegrador.controladorr.QuintoController">

    <children>

        <Label layoutX="160.0"
               layoutY="14.0"
               text="Análisis de Máximos y Mínimos"
               style="-fx-font-size: 16px;
                      -fx-font-weight: bold;
                      -fx-text-fill: #1E3A5F;" />

        <TextArea fx:id="TXTAInformacion"
                  layoutX="20.0"
                  layoutY="50.0"
                  prefWidth="560.0"
                  prefHeight="300.0"
                  editable="false"
                  wrapText="true"
                  style="-fx-background-radius: 8;
                         -fx-border-radius: 8;
                         -fx-border-color: #CBD5E1;" />

        <Button layoutX="260.0"
                layoutY="360.0"
                text="Cerrar"
                onAction="#cerrar"
                style="-fx-background-color: #2563EB;
                       -fx-text-fill: white;
                       -fx-background-radius: 8;" />

    </children>
</AnchorPane>

